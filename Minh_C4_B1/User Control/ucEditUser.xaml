<UserControl x:Class="Minh_C3_B1.ucEditUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minh_C3_B1"
             mc:Ignorable="d" Width="500" Height="150">
    <Grid>
        <Label Background="Wheat"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Top"
               Height="25">
            Manage User
        </Label>
        <Label Content="UserName"
               Width="100"
               HorizontalAlignment="Left"
               Height="25"
               HorizontalContentAlignment="Center"
               Margin="74,59,0,66"/>
        <TextBox x:Name="txtName"
                 TabIndex="0"
                 Width="100" Height="25"
                 HorizontalAlignment="Left" Margin="74,84,0,41"/>

        <Label Content="Password"
               Width="100" Height="25"
               HorizontalAlignment="Left"
               HorizontalContentAlignment="Center"
               Margin="322,59,0,66"/>
        <TextBox Name="txtPass"
                 TabIndex="1"
                 Width="100" Height="25"
                 HorizontalAlignment="Left" Margin="322,84,0,41">
        </TextBox>
    </Grid>
</UserControl>
